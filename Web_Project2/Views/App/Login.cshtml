@model Web_Project2.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="loginContainer">

    @using (Html.BeginForm("Login", "App", FormMethod.Post, new { @class = "login", name = "login" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)


        <h2 class="form-signin-heading">Account</h2>


        @Html.LabelFor(model => model._EmailAddress)
        <br/>
        @Html.ValidationMessageFor(model => model._EmailAddress)
        @Html.EditorFor(model => model._EmailAddress, null, "")


        @Html.LabelFor(model => model._Password)
        <br/>
        @Html.ValidationMessageFor(model => model._Password)
        @Html.EditorFor(model => model._Password, null, "")
        <a href="/App/Reset">Forgot Password</a>

        <label class="checkbox">
            <input type="checkbox" value="remember-me"> Remember me
        </label>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>


    }

</div> <!-- /container -->
@ViewBag.Exists