@model Web_Project2.Models.User

@{
    ViewBag.Title = "Create";
}


@ViewData["flag"]


<div class="loginContainer">
    @using (Html.BeginForm("Create", "Account", FormMethod.Post, new {@class = "form-signin", role = "form"}))
    {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
        <h2 class="form-signin-heading">Create an Account</h2>
                    @ViewBag.Exists
        @Html.LabelFor(model => model._EmailAddress)
         @Html.ValidationMessageFor(model => model._EmailAddress)
                    @Html.EditorFor(model => model._EmailAddress, null, "")        
                   @Html.LabelFor(model => model._Password)
         @Html.ValidationMessageFor(model => model._Password)
                    @Html.EditorFor(model => model._Password, null, "")
        @Html.LabelFor(model => model._RetypePassword)
         @Html.ValidationMessageFor(model => model._RetypePassword)
                    @Html.EditorFor(model => model._RetypePassword, null, "")
                    @Html.LabelFor(model => model._FirstName)
                    @Html.EditorFor(model => model._FirstName, null, "")
        @Html.LabelFor(model => model._LastName)
                    @Html.EditorFor(model => model._LastName, null, "")


            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>        
    }

</div>